	&:hover
		background #e3f48e
		padding 2px 3px 0 5px	
		
.top-decorator
  position: absolute
  top: 0
  height: 9px
  width: 100%
  left: 0
  background: #e7d303
  z-index: 10

.top-decorator:after,
.top-decorator:before
  content: " "
  position: absolute
  height: 100%
  width: 25%

.top-decorator:before
  right: 0
  background: #e73603

.top-decorator:after
  right: 25%
  background: #0089ff

.question-content
  margin 0 auto
  width 65%		
					
